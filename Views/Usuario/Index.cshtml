@model List<(SuporteIA.Models.AppUser User, IList<string> Roles)>

@{
    ViewData["Title"] = "Gestão de Usuários";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">
        <i class="bi bi-people-fill"></i> Gestão de Usuários
    </h2>

    @if (TempData["Mensagem"] != null)
    {
        <div class="alert alert-success text-center">@TempData["Mensagem"]</div>
    }
    @if (TempData["Erro"] != null)
    {
        <div class="alert alert-danger text-center">@TempData["Erro"]</div>
    }

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Cargo Atual</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@item.User.NomeCompleto</td>
                        <td>@item.User.Email</td>
                        <td>
                            @string.Join(", ", item.Roles)
                        </td>
                        <td>
                            <form asp-action="AlterarCargo" method="post" class="d-inline">
                                <input type="hidden" name="userId" value="@item.User.Id" />
                                <select name="novoCargo" class="form-select d-inline w-auto">
                                    <option value="Usuario" selected="@item.Roles.Contains("Usuario")">Usuário</option>
                                    <option value="Tecnico" selected="@item.Roles.Contains("Tecnico")">Técnico</option>
                                    <option value="Administrador" selected="@item.Roles.Contains("Administrador")">Administrador</option>
                                </select>
                                <button type="submit" class="btn btn-outline-primary btn-sm ms-2">
                                    <i class="bi bi-arrow-repeat"></i> Alterar
                                </button>
                            </form>

                            <form asp-action="Excluir" method="post" class="d-inline"
                                  onsubmit="return confirm('Tem certeza que deseja excluir este usuário?');">
                                <input type="hidden" name="userId" value="@item.User.Id" />
                                <button type="submit" class="btn btn-outline-danger btn-sm ms-2">
                                    <i class="bi bi-trash"></i> Excluir
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
