@{
    ViewData["Title"] = "Privacidade e LGPD";
}
<h2>Privacidade e LGPD</h2>
@if (TempData["Msg"] != null)
{
    <div class="alert alert-success">@TempData["Msg"]</div>
}
<p>Você pode solicitar a exclusão dos seus dados pessoais. Esta ação é irreversível.</p>
<form asp-action="ExcluirMeusDados" method="post">
    <button class="btn btn-danger" onclick="return confirm('Tem certeza que deseja excluir? Esta ação é irreversível.')">
        Excluir meus dados
    </button>
</form>
