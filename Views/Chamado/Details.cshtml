@model SuporteIA.Models.Chamado

@{
    ViewData["Title"] = "Detalhes do Chamado";
}

<div class="container mt-4">
    <h2 class="mb-3"><i class="bi bi-info-circle"></i> Detalhes do Chamado</h2>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-dark text-white">
            <strong>@Model.NmProblema</strong>
        </div>
        <div class="card-body">
            <p><strong>Categoria:</strong> @Model.Categoria</p>
            <p><strong>Status:</strong> @Model.Status</p>
            <p><strong>Prioridade:</strong> @Model.Prioridade</p>
            <p><strong>Data de Abertura:</strong> @Model.DataAbertura.ToString("dd/MM/yyyy HH:mm")</p>
            <hr />
            <p><strong>Solução sugerida pela IA:</strong></p>
            <div class="alert alert-secondary">@Model.SolucaoIA</div>
        </div>
    </div>

    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left-circle"></i> Voltar à Lista
    </a>
</div>
