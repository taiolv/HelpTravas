@model SuporteIA.Models.Chamado

@{
    ViewData["Title"] = "Editar Chamado";
}

<div class="container mt-5">
    <div class="card shadow-sm p-4">
        <h2 class="text-center mb-4">
            <i class="bi bi-pencil-square"></i> Editar Chamado
        </h2>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="CdChamado" />

            <div class="mb-3">
                <label asp-for="NmProblema" class="form-label fw-bold">Descrição do Problema</label>
                <textarea asp-for="NmProblema" class="form-control" rows="2" required></textarea>
                <span asp-validation-for="NmProblema" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Categoria" class="form-label fw-bold">Categoria</label>
                <input asp-for="Categoria" class="form-control" placeholder="Ex: Hardware, Software, Rede" />
                <span asp-validation-for="Categoria" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Status" class="form-label fw-bold">Status</label>
                <select asp-for="Status" class="form-select">
                    <option value="Aberto">Aberto</option>
                    <option value="Em andamento">Em andamento</option>
                    <option value="Resolvido">Resolvido</option>
                    <option value="Cancelado">Cancelado</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Prioridade" class="form-label fw-bold">Prioridade</label>
                <select asp-for="Prioridade" class="form-select">
                    <option value="Alta">Alta</option>
                    <option value="Normal">Normal</option>
                    <option value="Baixa">Baixa</option>
                </select>
                <span asp-validation-for="Prioridade" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SolucaoIA" class="form-label fw-bold">Solução da IA</label>
                <textarea asp-for="SolucaoIA" class="form-control" rows="4"></textarea>
                <span asp-validation-for="SolucaoIA" class="text-danger"></span>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary btn-lg me-2">
                    <i class="bi bi-save"></i> Salvar Alterações
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg">
                    <i class="bi bi-arrow-left"></i> Voltar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
